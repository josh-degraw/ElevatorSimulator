            </RibbonTab>
            <RibbonTab Header="">

            </RibbonTab>

        </Ribbon>
        <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" Height="auto" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360*" />
                <ColumnDefinition Width="387*" />
                <ColumnDefinition Width="335*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="407*"/>
                <RowDefinition />
                <RowDefinition Height="230*"/>
            </Grid.RowDefinitions>

            <ListView ItemsSource="{Binding Controller.Elevators}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Margin="0,10,0,12" Grid.RowSpan="2">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <StackPanel Mouse.MouseUp="ListView_MouseDown" Tag="{Binding ElevatorNumber}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding }"/>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <controls:ElevatorControl DataContext="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <GridSplitter Grid.Column="0" 
                          Grid.Row="1" 
                          Grid.ColumnSpan="3" 
                          HorizontalAlignment="Stretch" 
                          Margin="0,1,0,-1"
                          Height="3"/>

            <controls:LoggerView 
                Grid.Column="0" 
                Grid.Row="2"
                Grid.ColumnSpan="3" 
                VerticalAlignment="Stretch" 
                Margin="0,45.5,0,0"  />

            <ScrollViewer Grid.Row="0" Grid.Column="2" Margin="5,0,0,4" Grid.RowSpan="2">
                <controls:ElevatorShaftControl DataContext="{Binding}"/>
            </ScrollViewer>

