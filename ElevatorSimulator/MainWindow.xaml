                <StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label>Selected Elevator #</Label>
                        <Label Content="{Binding SelectedElevatorNumber}"/>
                    </StackPanel>
                    <local:ButtonPanelControl DataContext="{Binding SelectedButtonPanel}"/>
                </StackPanel>
            </StackPanel>-->
        </Grid>
    </DockPanel>
</Window>
